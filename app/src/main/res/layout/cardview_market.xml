<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/firstRelative"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/market_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="market_name"
            android:textSize="20dp"/>

            <TextView
                android:id="@+id/market_tag_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/market_name_id"
                android:text="#tag1"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/market_tag_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/market_tag_name_1"
                android:layout_marginLeft="7dp"
                android:layout_below="@+id/market_name_id"
                android:text="#tag2"
                android:textSize="15dp"/>

                <CheckBox
                    android:id="@+id/market_bookmark_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/market_bookmark"
                    android:button="@null"/>


            <ImageView
                android:id="@+id/market_image_1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/market_tag_name_2"
                android:layout_marginTop="5dp"
                android:background="#d2d2d2"/>

            <ImageView
                android:id="@+id/market_image_2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#ffd2dd"
                android:layout_toRightOf="@+id/market_image_1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/market_tag_name_2"/>

            <ImageView
                android:id="@+id/market_image_3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d"
                android:layout_toRightOf="@+id/market_image_2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/market_tag_name_2"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>