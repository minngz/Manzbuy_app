<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/market_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="market_name"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/market_tag_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="#tag1"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/market_tag_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#tag2"
                android:textSize="13dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <CheckBox
                    android:id="@+id/market_bookmark_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/market_bookmark"
                    android:button="@null"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/market_image_1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#d2d2d2" />

            <ImageView
                android:id="@+id/market_image_2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#ffd2dd" />

            <ImageView
                android:id="@+id/market_image_3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#2d2d2d" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>