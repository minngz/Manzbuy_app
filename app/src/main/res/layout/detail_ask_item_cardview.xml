<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_writeAsk_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="날짜"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/detail_writeAsk_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/detail_writeAsk_date"
            android:layout_marginLeft="10dp"
            android:text="아이디"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/detail_writeAsk_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/detail_writeAsk_id"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="문의내용"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/detail_writeAsk_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="답변현황"
            android:textSize="15dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>