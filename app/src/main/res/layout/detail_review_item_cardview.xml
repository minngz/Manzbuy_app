<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_writeReview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="날짜"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detail_writeReview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/detail_writeReview_date"
            android:text="아이디"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detail_writeReview_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_writeReview_date"
            android:layout_toRightOf="@+id/deatil_writeReview_guide1"
            android:text="컬러"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/deatil_writeReview_guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_writeReview_date"
            android:layout_alignLeft="@+id/detail_writeReview_date"
            android:text="["
            android:textSize="17dp" />

        <TextView
            android:id="@+id/deatil_writeReview_guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_writeReview_date"
            android:layout_toRightOf="@+id/detail_writeReview_color"
            android:text="/"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/detail_writeReview_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_writeReview_date"
            android:layout_toRightOf="@id/deatil_writeReview_guide2"
            android:text="사이즈"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/deatil_writeReview_guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_writeReview_date"
            android:layout_toRightOf="@+id/detail_writeReview_size"
            android:text="]"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/detail_writeReview_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_writeReview_color"
            android:layout_alignLeft="@+id/detail_writeReview_date"
            android:layout_marginTop="20dp"
            android:text="후기내용"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/deatil_writeReview_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="?android:attr/ratingBarStyleIndicator"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>