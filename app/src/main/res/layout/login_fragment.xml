<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ee424242">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/login_id_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="ID"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/login_id_edit"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@id/login_id_tv"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/login_password_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="PW"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/login_id_tv"/>
        <EditText
            android:id="@+id/login_password_edit"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/login_id_tv"
            android:layout_toRightOf="@+id/login_password_tv"

            android:layout_marginLeft="13dp"
            android:backgroundTint="@color/colorWhite"/>
        <Button
            android:id="@+id/login_page_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="로그인"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/login_password_tv"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="50dp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>