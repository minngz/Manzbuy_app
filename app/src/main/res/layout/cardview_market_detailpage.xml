<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="270dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/market_detailpage_itemImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#d2f3a5"
                android:layout_marginBottom="12dp"/>

            <CheckBox
                android:id="@+id/market_detailpage_itemBookmark"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@+id/market_detailpage_itemImage"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/market_bookmark"
                android:button="@null"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/market_detailpage_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="상품명"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/market_detailpage_itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/market_detailpage_itemName"
                android:layout_marginTop="8dp"
                android:text="상품 가격"
                android:textSize="15dp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>