<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_writeAsk_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_photoReview_recyclerView"
        android:layout_marginTop="15dp"
        android:layout_marginRight="28dp"
        android:layout_alignParentRight="true"
        android:text="> 문의하기"
        android:textSize="18dp"/>

    <View
        android:id="@+id/detail_writeAsk_seperator"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/detail_writeAsk_btn"
        android:background="#424242"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_writeAsk_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_writeAsk_seperator"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="28dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>