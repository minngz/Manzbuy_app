<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/cardview_shoppingcart_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/shoppingcart_checkbox"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/cardview_shoppingcart_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cardview_shoppingcart_check"
            android:layout_marginLeft="5dp"
            android:background="#aabdbdbd"/>

        <TextView
            android:id="@+id/cardview_shoppingcart_guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardview_shoppingcart_image"
            android:layout_toRightOf="@id/cardview_shoppingcart_image"
            android:layout_marginLeft="13dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:text="["/>

        <TextView
            android:id="@+id/cardview_shoppingcart_marketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cardview_shoppingcart_guide1"
            android:layout_alignTop="@+id/cardview_shoppingcart_image"
            android:textSize="17dp"
            android:textColor="#000000"
            android:text="마켓명"/>

        <TextView
            android:id="@+id/cardview_shoppingcart_guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardview_shoppingcart_image"
            android:layout_toRightOf="@id/cardview_shoppingcart_marketName"
            android:textSize="17dp"
            android:textColor="#000000"
            android:text="]"/>

        <TextView
            android:id="@+id/cardview_shoppingcart_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardview_shoppingcart_image"
            android:layout_toRightOf="@id/cardview_shoppingcart_guide2"
            android:layout_marginLeft="5dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:text="상품명"/>

        <TextView
            android:id="@+id/cardview_shoppingcart_itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/cardview_shoppingcart_guide1"
            android:layout_alignLeft="@+id/cardview_shoppingcart_guide1"
            android:text="가격" />

        <TextView
            android:id="@+id/cardview_shoppingcart_guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/cardview_shoppingcart_image"
            android:layout_alignBottom="@+id/cardview_shoppingcart_image"
            android:layout_alignLeft="@+id/cardview_shoppingcart_guide1"
            android:text="옵션 ("/>

        <TextView
            android:id="@+id/cardview_shoppingcart_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/cardview_shoppingcart_guide3"
            android:layout_alignBottom="@+id/cardview_shoppingcart_image"
            android:text="색상"/>

        <TextView
            android:id="@+id/cardview_shoppingcart_guide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/cardview_shoppingcart_color"
            android:layout_alignBottom="@+id/cardview_shoppingcart_image"
            android:text=", "/>

        <TextView
            android:id="@+id/cardview_shoppingcart_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/cardview_shoppingcart_guide4"
            android:layout_alignBottom="@+id/cardview_shoppingcart_image"
            android:text="사이즈"/>

        <TextView
            android:id="@+id/cardview_shoppingcart_guide5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/cardview_shoppingcart_size"
            android:layout_alignBottom="@+id/cardview_shoppingcart_image"
            android:text=")"/>

        <Button
            android:id="@+id/cardview_shoppingcart_numberMinus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cardview_shoppingcart_number"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@color/colorWhite"/>

        <EditText
            android:id="@+id/cardview_shoppingcart_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cardview_shoppingcart_numberPlus"
            android:background="@null"
            android:textAlignment="center"
            android:text="0"/>

        <Button
            android:id="@+id/cardview_shoppingcart_numberPlus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@color/colorWhite"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>