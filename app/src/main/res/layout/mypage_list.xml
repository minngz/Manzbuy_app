<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
            android:id="@+id/mypage_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Section header"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <View
            android:id="@+id/mypage_seperator"
            android:layout_width="390dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/mypage_section"
            android:background="#424242"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mypage_list_recyclerView"
            android:layout_below="@+id/mypage_seperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        </android.support.v7.widget.RecyclerView>

</RelativeLayout>